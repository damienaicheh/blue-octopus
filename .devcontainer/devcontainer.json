{
    "name": "Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "containerUser": "vscode",
    "features": {
        "azure-cli": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/terraform:latest": {
            "version": "latest",
            "tflint": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "installTools": true,
            "version": "os-provided"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Azure
                "ms-vscode.vscode-node-azure-pack",
                // Terraform
                "hashicorp.terraform",
                // Copilot
                "GitHub.copilot-chat"
            ]
        }
    },
    "remoteUser": "vscode"
}